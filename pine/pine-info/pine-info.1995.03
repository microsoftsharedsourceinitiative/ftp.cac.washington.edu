#!/bin/sh
wpinesetup(){

echo "\nSetting up Wyse arrow and function keys..."

# Next/Prev Page

echo "\033Z1r \0177\c"
echo "\033Z1w-\0177\c"

# Char/Line delete

echo "\033Z15\04\0177\c"
echo "\033Z16\013\0177\c"

# Arrow keys

echo "\033Z1+\033[A\0177\c"
echo "\033Z1,\033[B\0177\c"
echo "\033Z1.\033[C\0177\c"
echo "\033Z1-\033[D\0177\c"

echo "Done\n"
}

wpinereset() {

echo "\nResetting standard Wyse arrow/function keys..."

#t/Prev Page

echo "\033Z1r\0177\c"
echo "\033Z1w\0177\c"

# Char/Line delete

echo "\033Z15\0177\c"
echo "\033Z16\0177\c"

# Arrow keys

echo "\033Z1+\0177\c"
echo "\033Z1.\0177\c"
echo "\033Z1,\0177\c"
echo "\033Z1-\0177\c"

echo "Done.\n"
}
if [ "$TERM" != "wyse50" ]
then
	pine1 $*  
	clear
	exit 
fi
	trap wpinereset 0 1 2 3 15
	wpinesetup
	pine1 $*  
	wpinereset
	clear 
	exit




